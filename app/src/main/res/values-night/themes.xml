<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ECanteenOrderingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary stays orange for bars in dark mode too -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryContainer">@color/primary</item>
        <item name="materialButtonStyle">@style/AppButtonStyle</item>
        
        <!-- Status bar: white with dark icons even in night (requested) -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>